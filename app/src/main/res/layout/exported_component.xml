<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/target_package_info"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/target_package_lable"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="目标包名:"/>
            <TextView
                android:id="@+id/target_package_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/target_component_info"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/target_component_lable"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="目标组件:"/>
            <TextView
                android:id="@+id/target_component_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/action_info"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/action_lable"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="设定action"/>
            <Spinner
                android:id="@+id/action_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:id="@+id/please_add_extra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请添加额外值或不添加:"/>
        <com.example.ask.ui.exposedComponents.MyListView
            android:id="@+id/extras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="NestedScrolling" />
        <Button
            android:id="@+id/send_command"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送"/>


    </LinearLayout>

</ScrollView>


